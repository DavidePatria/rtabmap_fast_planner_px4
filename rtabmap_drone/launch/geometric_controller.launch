<launch>
	<!-- geomtric controller already subscribes to the correct topics as it is made to work wit px4 -->
	<!-- so no further integration steps are rquired for it to work with rtabmap and the other packages -->
	<arg name="mav_name" default="iris"/>
	<!-- <arg name="vehicle" default="rtabmap"/> -->
	
	<!-- according to the value 1 for the ctrl_mode is ERROR_QUATERNION and 2 is ERROR_GEOMETRIC  -->
	<arg name="command_input" default="2" />
	<arg name="gazebo_simulation" default="true" />
	<!-- <arg name="max_acc" default="1.0" /> -->
	<arg name="init_pos_x" default="0.0" />
	<arg name="init_pos_y" default="0.0" />
	<arg name="init_pos_z" default="1.0" />

	<node pkg="geometric_controller" type="geometric_controller_node" name="geometric_controller" output="screen">
		<param name="mav_name" type="string" value="$(arg mav_name)" />
		<remap from="command/bodyrate_command" to="/mavros/setpoint_raw/attitude"/>
		<param name="ctrl_mode" value="$(arg command_input)" />
		<param name="enable_sim" value="$(arg gazebo_simulation)" />
		<param name="enable_gazebo_state" value="true"/>
		<param name="velocity_yaw" value="false"/>
		<!-- <param name="max_acc" value="$(arg max_acc)" /> -->
		<param name="max_acc" value="2.0" />

		<!-- THIS GROUPS SHOULD BE USED TO SEPARATE THE VEHICLES, FOR NOW THEY DO NOT WORK, MAYBE MISUSED GROUP -->

		<!--Params specific for Iris copter-->
