		<!-- 	<param name="Kv_x" value="5.0" /> -->
		<!-- 	<param name="Kv_y" value="5.0" /> -->
		<!-- 	<param name="Kv_z" value="10.0" /> -->
		<!-- </group> -->
		<!---->
		<!-- <group if="$(eval vehicle == 'iris_depth')"> -->
		<!-- 	<param name="attctrl_constant" value="0.7"/> -->
		<!-- 	<param name="normalizedthrust_constant" value="0.04"/> -->
		<!-- 	<param name="normalizedthrust_offset" value="0.1"/> -->
		<!---->
		<!-- 	<param name="Kp_x" value="10.0" /> -->
		<!-- 	<param name="Kp_y" value="10.0" /> -->
		<!-- 	<param name="Kp_z" value="20.0" /> -->
		<!-- 	<param name="Kv_x" value="5.0" /> -->
		<!-- 	<param name="Kv_y" value="5.0" /> -->
		<!-- 	<param name="Kv_z" value="10.0" /> -->
		<!-- </group> -->

		<param name="attctrl_constant" value="0.7"/>
		<param name="normalizedthrust_constant" value="0.07"/>
		<param name="normalizedthrust_offset" value="0.08"/>

		<param name="Kp_x" value="10.0" />
		<param name="Kp_y" value="10.0" />
		<param name="Kp_z" value="20.0" />
		<param name="Kv_x" value="5.0" />
		<param name="Kv_y" value="5.0" />
		<param name="Kv_z" value="10.0" />

		<param name="init_pos_x" value="$(arg init_pos_x)" />
		<param name="init_pos_y" value="$(arg init_pos_y)" />
		<param name="init_pos_z" value="$(arg init_pos_z)" />
	</node>

